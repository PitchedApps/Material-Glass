<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@color/background"
        android:fillViewport="true"
        android:gravity="center"
        android:overScrollMode="ifContentScrolls">

        <ImageView
            android:id="@+id/bigwall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

    </ScrollView>

    <View
        android:id="@+id/fabBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@color/faboverlay" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/wall_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        fab:fab_addButtonColorNormal="@color/fab_unpressed"
        fab:fab_addButtonColorPressed="@color/fab_pressed"
        fab:fab_addButtonPlusIconColor="@color/text"
        fab:fab_labelStyle="@style/FabLabels">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/setwall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/fab_unpressed"
            fab:fab_colorPressed="@color/fab_pressed"
            fab:fab_icon="@drawable/ic_check"
            fab:fab_size="mini"
            fab:fab_title="@string/apply" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/savewall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/fab_unpressed"
            fab:fab_colorPressed="@color/fab_pressed"
            fab:fab_icon="@drawable/ic_save"
            fab:fab_size="mini"
            fab:fab_title="@string/save" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>